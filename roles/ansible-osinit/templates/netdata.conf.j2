[global]
    run as user = netdata
    update every = 10
    debug log = none
    error log = none
    access log = none
    memory mode = {{ os_linux_exporter_type_item.database }}
    cache directory = /var/cache/netdata
    history = {{ os_linux_exporter_type_item.history }}
    bind to = {{ ansible_default_ipv4.address }}
    stock config directory = /etc/netdata/conf.d

[web]
    default port = {{ os_linux_exporter_type_item.port }}
    enable gzip compression = no
    web files owner = root
    web files group = netdata

[plugins]
    proc = yes
    tc = {{ netdata_collector.tc }}
    idlejitter = {{ netdata_collector.idlejitter }}
    cgroups = {{ netdata_collector.cgroups }}
    checks = {{ netdata_collector.checks }}
    apps = {{ netdata_collector.apps }}
    charts.d = {{ netdata_collector.chartsd }}
    node.d = {{ netdata_collector.noded }}
    python.d = {{ netdata_collector.pythond }}
    plugins directory = /usr/libexec/netdata/plugins.d
    enable running new plugins = no
    check for new plugins every = 60
